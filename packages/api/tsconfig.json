{
  "compilerOptions": {
     "lib": ["es2017"],
     "target": "es2017",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "composite": true,
     "declaration": true,
     "declarationMap": true,
     "resolveJsonModule": true
  },
  "exclude": [
    "../../node_modules",
    "build",
    "./tsconfig.tsbuildinfo",
    "src/**/*.spec.ts"
  ],
  "include": [
    "ormconfig.json",
    "src/**/*.ts",
    "src/index.ts"
  ]
}